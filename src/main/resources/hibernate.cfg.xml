<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- DB connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/myl_db?serverTimezone=America/Argentina/Buenos_Aires</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">myl1234!</property>

        <!-- Optional, but safe -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Hibernate tuning -->
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="hibernate.show_sql">true</property>

        <!-- Your annotated entities go here -->
        <!-- Example: -->

        <!-- <mapping class="com.example.MyEntity"/> -->
        <mapping class="ar.com.mylback.dal.entities.Card"/>
        <mapping class="ar.com.mylback.dal.entities.Collection"/>
        <mapping class="ar.com.mylback.dal.entities.Format"/>
        <mapping class="ar.com.mylback.dal.entities.KeyWord"/>
        <mapping class="ar.com.mylback.dal.entities.Race"/>
        <mapping class="ar.com.mylback.dal.entities.Rarity"/>
        <mapping class="ar.com.mylback.dal.entities.Type"/>


    </session-factory>
</hibernate-configuration>
